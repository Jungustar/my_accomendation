<div class="container">
<div class="row d-flex justify-content-center">
  <% @accomendations.each do |accomendation| %>
    <div class="card w-25 shadow p-3 mb-5 bg-light rounded mt-3 mx-1 ">
      <img class="card-img-top" src="https://images.unsplash.com/photo-1529408632839-a54952c491e5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="Card image cap">
      <div class="card-body">
        <h4 class="card-title"><%= accomendation.title %></h4>
        <p class="card-text">
          <%= accomendation.description %>
        </p>
        <div class="btn-group btn-group-sm d-flex align-items-end" role="group" aria-label="Basic example">
        <%= link_to "Details", accomendation_path(accomendation), class: "btn btn-secondary" %>
        <%= link_to "Delete", accomendation_path(accomendation), method: :delete, class: "btn btn-secondary"%>
        <%= link_to "Edit", edit_accomendation_path(accomendation), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
